#!/usr/bin/make -f

flavours := azbooka-n516 v3 n516

build-arch:
build-indep:

build: build-arch build-indep

clean:
	dh_testdir
	dh_testroot
	dh_clean

DATADIR=/usr/share/esplash-data
FIFODIR=/var/lib/esplash

install: build-indep
	dh_testdir
	dh_testroot
	dh_installdirs

	mkdir -p $(CURDIR)/debian/esplash-sysvinit/sbin
	install -m 0644 splash-functions $(CURDIR)/debian/esplash-sysvinit/sbin

	mkdir -p $(CURDIR)/debian/esplash-sysvinit/etc/default

	mkdir -p $(CURDIR)/debian/esplash-sysvinit$(FIFODIR)
	mkfifo $(CURDIR)/debian/esplash-sysvinit$(FIFODIR)/esplash_fifo

	for FLAVOUR in $(flavours); do \
		PKGDIR=$(CURDIR)/debian/esplash-data-$$FLAVOUR; \
		mkdir -p $$PKGDIR$(DATADIR); \
		install -T -m 0644 $$FLAVOUR.cfg $$PKGDIR$(DATADIR)/$$FLAVOUR.cfg; \
	done

	install -m 0644 oi-bootlogo-270.lzma $(CURDIR)/debian/esplash-data-n516$(DATADIR)
	install -m 0644 oi-bootlogo.lzma $(CURDIR)/debian/esplash-data-v3$(DATADIR)

	mk-rawpic -r270 -d3 azbooka-splash.png $(CURDIR)/debian/esplash-data-azbooka-n516$(DATADIR)/azbooka-270
	lzma $(CURDIR)/debian/esplash-data-azbooka-n516$(DATADIR)/azbooka-270

	mk-rawpic -r270 -d3 shutdown.png $(CURDIR)/debian/esplash-data-azbooka-n516$(DATADIR)/azbooka-shutdown
	lzma $(CURDIR)/debian/esplash-data-azbooka-n516$(DATADIR)/azbooka-shutdown

	mk-rawpic -r270 -d3 shutdown.png $(CURDIR)/debian/esplash-data-n516$(DATADIR)/n516-shutdown
	lzma $(CURDIR)/debian/esplash-data-n516$(DATADIR)/n516-shutdown

	mk-rawpic -d2 shutdown.png $(CURDIR)/debian/esplash-data-v3$(DATADIR)/v3-shutdown
	lzma $(CURDIR)/debian/esplash-data-v3$(DATADIR)/v3-shutdown

binary-arch:

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installinit -pesplash-sysvinit --name=fb-clean --no-start -r -- stop 01 0 .
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
